<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardBackgroundColor="@color/colorCardBackground"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            app:contentPadding="10dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/heart_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"></com.github.mikephil.charting.charts.LineChart>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1.1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/textViewMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="Max"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@+id/max_heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/max_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="11"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewMax" />



                    </android.support.constraint.ConstraintLayout>

                    <ProgressBar
                        android:id="@+id/pb_max_heart"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="false"
                        android:max="30"
                        android:progress="10"
                        android:progressDrawable="@drawable/circular_small"
                        android:rotation="90" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/textViewMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="Min"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@+id/min_heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/min_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="11"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewMin" />

                    </android.support.constraint.ConstraintLayout>

                    <ProgressBar
                        android:id="@+id/pb_min_heart"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="false"
                        android:max="14"
                        android:progress="4"
                        android:progressDrawable="@drawable/circular_small"
                        android:rotation="90" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <RelativeLayout

                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/textViewavg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="Avg"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@+id/avg_heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/avg_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="11"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textViewavg" />

                    </android.support.constraint.ConstraintLayout>

                    <ProgressBar
                        android:id="@+id/pb_avg_heart"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="false"
                        android:max="20"
                        android:progress="10"
                        android:progressDrawable="@drawable/circular_small"
                        android:rotation="90" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingHorizontal="10dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/textView21Var"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="Var"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@+id/var_heart"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/var_heart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0sp"
                            android:paddingBottom="-5dp"
                            android:paddingTop="-5dp"
                            android:text="11"
                            android:textColor="@color/sleepsummarytextcolor"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/textView2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView21Var" />

                    </android.support.constraint.ConstraintLayout>

                    <ProgressBar
                        android:id="@+id/pb_var_heart"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:indeterminate="false"
                        android:max="10"
                        android:progress="3"
                        android:progressDrawable="@drawable/circular_small"
                        android:rotation="90" />

                </RelativeLayout>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>